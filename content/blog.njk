title: Blog
layout: "base.njk"
---

<h2>Blog Page</h2>
<ul>
    {%- for post in collections.post -%}
        <li class="blog-post">
            <strong>
                <a href="{{ post.url }}">{{ post.data.title }}</a>
            </strong>
            <p>{{ post.data.description }}</p>
            <small>{{ post.data.date.toISOString().slice(0,10) }}</small>
        </li>
    {%- endfor -%}
</ul>